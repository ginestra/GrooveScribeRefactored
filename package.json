{
  "name": "groove-scribe",
  "version": "2.0.0",
  "description": "A tool for drummers to create, hear, practice and share grooves",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/fix-html-paths.js",
    "preview": "vite preview",
    "lint": "eslint src --ext .js",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^3.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ginestra/GrooveScribe"
  },
